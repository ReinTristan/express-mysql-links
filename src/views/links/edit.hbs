<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body ">
                    <form action="/links/edit/{{link.id}}" method="POST">
                    <div class="mb-3">
                        <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Title" autofocus>
                    </div>
                    <div class="mb-3">
                        <input type="url" value="{{link.url}}" class="form-control" name="url" placeholder="Url">
                    </div>
                    <div class="mb-3">
                        <textarea  class="form-control" name="description" rows="2" placeholder="Description">{{link.description}}</textarea>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Save</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>